@import "/utils/myUI.wxss";


.popview {
  width: 100%;
  height: 100%;
  z-index: 777;
}

.popText {
  margin-top: 30rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(74, 74, 74, 1);
  height: fit-content;
}

/* 海报样式 */
.posterTitle {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(99, 102, 100, 1);
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}

.popCha {
  position: absolute;
  right: 50rpx;
  top: 30rpx;
}

.popSwiper {
  height: 800rpx;
  width: 100%;
  background-color: #fff;
}

.popButton {
  width: 639rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(85, 161, 220, 1);
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  position: fixed;
  bottom: 30rpx;
}

.popImg {
  width: 450rpx;
  height:800rpx;
  transition: height .5s,
    width .2s;
}

/* 隐藏后缩放 */
.sImg {
  /* width: 390rpx; */
  height: 600rpx;
  transition: height .5s,
    width .2s;
}
