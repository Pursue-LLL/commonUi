ui-tabs {
  /* display: inline-block; */
  width: 100%;
}

.ui-tabs {
  border-bottom: 1px solid #f7f7f7;
}

.ui-tabs.ui-tabs-x {
  width: 100%;
  white-space: nowrap;
  position: relative;
}

.ui-tabs-x .ui-tabs-ink-bar-wrapper {
  position: absolute;
  left: 0;
  height: 2px;
  transform-origin: 50% 50%;
  transition: width 250ms ease-out, left 250ms ease-out;
}

.ui-tabs-x .ui-tabs-ink-bar {
  position: relative;
  width: 100%;
  margin: 0 auto;
  border-bottom: 2px solid #ffc933;
}