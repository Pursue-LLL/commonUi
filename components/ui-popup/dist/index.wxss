/* 可以判断使用大的还是小的样式 */
.ui-popup {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  transition-property: transform, visibility;
  transition-duration: 300ms;
  max-height: 100%;
  overflow: hidden;
  /* overflow-y: scroll; */
  -webkit-backface-visibility: hidden;
  visibility: hidden;
}

.ui-popup.show {
  visibility: visible;
}

.ui-popup-content {
  position: absolute;
  background-color: #fff;
}

/* 中间弹窗 */
.ui-popup-content.center {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  height: fit-content;
  width: 100%;
  transition: all 400ms;
  transform: scale(0.08);
  border-radius: 30rpx;
  opacity: 0;
}

.ui-popup-content.center.show {
  transform: scale(1);
  opacity: 1;
  
}

/* 顶部弹窗 */
.ui-popup-content.top {
  top: 0;
  left: 0;
  width: 100%;
  animation: slideOut both .3s;
  transform-origin: 50% 0;
}

.ui-popup-content.top.show {
  animation: slideIn both .3s;
  transform-origin: 50% 0;
}

/* 底部出 */
.ui-popup-content.bottom {
  bottom: 0;
  left: 0;
  width: 100%;
  transform: translateY(100%);
  transition: All 0.35s ease;
  /* transform-origin: 0 150%; */
  background: #ffffff;
  opacity: 0;
}

.ui-popup-content.bottom.radius {
  border-radius: 30rpx 30rpx 0 0;
}

.ui-popup-content.bottom.show {
  transition: All 0.35s ease;
  transform: translateY(0);
  opacity: 1;
}

/* 右出 */
.ui-popup-content.right {
  height: 100%;
  top: auto;
  right: 0;
  bottom: 0;
  left: auto;
  width: 100%;
  transition: transform 300ms;
  transform: translate3d(100%, 0, 0);
  border-radius: 20rpx 20rpx 0 0;
}

.ui-popup-content.right.radius {
  border-radius: 30rpx 30rpx 0 0;
}

.ui-popup-content.right.show {
  transform: translate3d(0, 0, 0);
}

.ui-popup-mask {
  display: block;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  opacity: 0;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  z-index: -1;
  transition: opacity 400ms;
}

.ui-popup-mask.show {
  opacity: 1;
}

.ui-popup-animate-top-enter-active {
  animation: slideIn both .3s;
  transform-origin: 50% 0;
}

.ui-popup-animate-top-leave-active {
  animation: slideOut both .3s;
  transform-origin: 50% 0;
}

@keyframes slideIn {
  0% {
    opacity: 0;
    transform: scaleY(0);
  }

  100% {
    opacity: 1;
    transform: scaleY(1);
  }
}

@keyframes slideOut {
  0% {
    opacity: 1;
    -webkit-transform: scaleY(1);
    transform: scaleY(1);
  }

  100% {
    opacity: 0;
    -webkit-transform: scaleY(0);
    transform: scaleY(0);
  }
}